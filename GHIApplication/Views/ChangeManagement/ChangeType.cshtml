<div class="row" ng-controller="ChangeTypeController" ng-cloak>
    <div class="col-lg-12">

        <!-- Change Type Form -->
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Change Type Entry Form</h6>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Change Type Name <span style="color: red">*</span></label>
                        <div class="col-sm-6">
                            <input type="text" ng-model="newData.ChangeTypeName" class="form-control" placeholder="Enter Change Type Name" spellcheck="true" maxlength="100">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8 offset-sm-3">
                            <button class="btn btn-primary" id="btnSubmit" ng-disabled="!newData.ChangeTypeName" ng-click="SubmitFn(newData)"><i class="fa fa-save"></i> Save</button>
                            <button class="btn btn-danger" ng-click="ClearFn()" ng-disabled="!newData.ChangeTypeName"><i class="fa fa-clone"></i> Clear</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>

    <!-- DataTable with Hover -->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Change Type List</h6>
            </div>
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Change Type Name</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="r in result" ng-class="{'selectedRow':$index == selectedRow}">
                            <td>{{r.ChangeTypeName}}</td>
                            <td class="text-center">
                                <button type="button" class="btn btn-success" ng-click="EditFn(r, $index)"><i class="fa fa-edit"></i> Edit</button>
                                <button type="button" class="btn btn-danger" ng-click="DeleteFn(r.Id, $index)"><i class="fa fa-trash"></i> Delete</button>
                                <button type="button" class="btn btn-warning" ng-if="r.Active==1" ng-click="StatusFn(r.Id, $index)"><i class="fa fa-times"></i> Inactive</button>
                                <button type="button" class="btn btn-dark" ng-if="r.Active==0" ng-click="StatusFn(r.Id, $index)"><i class="fa fa-check"></i> Active</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Angular/ChangeManagement/ChangeTypeController.js")