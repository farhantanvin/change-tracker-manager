<div class="row" ng-controller="ChangeRequestController" ng-cloak>
    <div class="col-lg-12">

        <!-- Change Request Form -->
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Change Request Entry Form</h6>
            </div>
            <div class="card-body">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Request By</label>
                        <div class="col-sm-6">
                            <input type="hidden" id="sessionValue" value="@Session["fullName"]">
                            <input type="text" ng-model="newData.RequestBy" class="form-control" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Request Date <span style="color: red">*</span></label>
                        <div class="col-sm-6">
                            <input type="date" ng-model="newData.RequestDate" class="form-control" placeholder="Enter Request Date">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Description <span style="color: red">*</span></label>
                        <div class="col-sm-6">
                            <textarea class="form-control" ng-model="newData.Description" placeholder="Enter Description" spellcheck="true"></textarea>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Change Type  <span style="color: red">*</span></label>
                        <div class="col-sm-6">
                            <select ng-model="newData.ChangeType" ng-options="r.Id as r.ChangeTypeName for r in ChangeTypeData" ng-change="OtherFieldShow(newData.ChangeType)" class="form-control mb-3">
                            </select>
                        </div>
                    </div>

                    <div class="form-group row" ng-show="newData.OtherFieldShow == 1">
                        <label class="col-sm-3 col-form-label">Other</label>
                        <div class="col-sm-6">
                            <input type="text" ng-model="newData.ChangeOther" class="form-control" placeholder="If other then specify here">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Change Priority</label>
                        <div class="col-sm-6">
                            <select ng-model="newData.ChangePriority" class="form-control mb-3">
                                <option value="0">Select Change Priority</option>
                                <option value="1">High</option>
                                <option value="2">Medium</option>
                                <option value="3">Low</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Change Impact</label>
                        <div class="col-sm-6">
                            <textarea ng-model="newData.ChangeImpact" class="form-control"placeholder="Enter Change Impact"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Roll Back Plan</label>
                        <div class="col-sm-6">
                            <textarea ng-model="newData.RollBackPlan" class="form-control" placeholder="Enter Roll Back Plan"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-8 offset-sm-3">
                            <button class="btn btn-primary" ng-disabled="!newData.RequestDate || !newData.Description || !newData.ChangeType" ng-click="SaveFn(newData)"><i class="fa fa-save"></i> Save</button>
                            <button class="btn btn-danger" ng-click="ClearFn()"><i class="fa fa-clone"></i> Clear</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>

   
</div>



@Scripts.Render("~/Angular/ChangeManagement/ChangeRequestController.js")