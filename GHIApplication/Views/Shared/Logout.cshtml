 
 <!-- Modal Logout -->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelLogout"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p class="text-center">Are you sure you want to logout?</p>
                <div class="text-center">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
                    <a href="@Url.Action("Logout", "Home")" class="btn btn-primary"><i class="fas fa-check"></i> Ok</a>
                </div>
            </div>
        </div>
    </div>
</div>